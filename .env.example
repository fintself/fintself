# CL_CENCOSUD_USER=""
# CL_CENCOSUD_PASSWORD=""
# CL_SANTANDER_USER=""
# CL_SANTANDER_PASSWORD=""
# CL_ESTADO_USER=""
# CL_ESTADO_PASSWORD=""

# Configuración de Scrapers (opcional, valores por defecto mostrados)
# --------------------------------------------------------------------
# Habilita la generación de archivos de depuración (screenshots, HTML).
DEBUG=false

# Ejecuta el navegador en modo sin interfaz gráfica. 'true' o 'false'.
# Es ignorado (se fuerza a 'false') si DEBUG está en 'true'.
SCRAPER_HEADLESS_MODE=true

# Timeout por defecto para operaciones de Playwright (en milisegundos).
SCRAPER_DEFAULT_TIMEOUT=15000

# Retardo entre cada acción de Playwright para hacer la automatización más lenta y observable (en milisegundos).
SCRAPER_SLOW_MO=100

# User Agent a utilizar en el navegador.
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/108.0.0.0 Safari/537.36"

# Tamaño de la ventana del navegador.
SCRAPER_VIEWPORT_WIDTH=1366
SCRAPER_VIEWPORT_HEIGHT=768

# Configuración regional del navegador.
SCRAPER_LOCALE="es-CL"

# Zona horaria del navegador.
SCRAPER_TIMEZONE_ID="America/Santiago"

# Pausas aleatorias para simular comportamiento humano (en milisegundos).
SCRAPER_MIN_HUMAN_DELAY_MS=200.0
SCRAPER_MAX_HUMAN_DELAY_MS=800.0
